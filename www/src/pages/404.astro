---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Page Not Found | Talgonite">
  <main>
    <div class="container">
      <h1>404</h1>
      <p>Page not found</p>
      <a href="/" class="btn">Back to Home</a>
    </div>
  </main>
</Layout>

<style>
  main {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .container {
    padding: 2rem;
  }

  h1 {
    font-size: 6rem;
    font-weight: 400;
    font-style: italic;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
  }

  p {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    margin-bottom: 2rem;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    padding: 0.75rem 1.5rem;
    font-family: system-ui, -apple-system, sans-serif;
    background: var(--color-primary);
    color: #1a1814;
    font-weight: 500;
    border-radius: 2rem;
    transition: background 0.2s ease;
  }

  .btn:hover {
    background: var(--color-primary-hover);
    color: #1a1814;
  }
</style>
