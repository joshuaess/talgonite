---
import Layout from '../layouts/Layout.astro';
import DownloadButton from '../components/DownloadButton.astro';
---

<Layout title="Talgonite - Modern Darkages Client">
  <main>
    <section class="hero">
      <div class="container">
        <h1 class="logo">Talgonite</h1>
        <p class="tagline">A modern, open-source client for Darkages</p>

        <div class="cta-buttons">
          <DownloadButton />
          <a href="https://github.com/talgonite/talgonite" class="btn btn-secondary">
            <svg class="icon" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            Contribute
          </a>
        </div>
      </div>
    </section>

    <footer>
      <div class="container">
        <p>
          <a href="https://github.com/talgonite/talgonite">GitHub</a>
          <span class="separator">|</span>
          <a href="https://github.com/talgonite/talgonite/issues">Issues</a>
        </p>
        <p class="copyright">Darkages is a trademark of KRU Interactive. Talgonite is not affiliated with KRU Interactive.</p>
      </div>
    </footer>
  </main>
</Layout>

<style>
  main {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 1.5rem;
    width: 100%;
    text-align: center;
  }

  .hero {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo {
    font-size: 4rem;
    font-weight: 400;
    font-style: italic;
    color: var(--color-primary);
    margin-bottom: 1rem;
    letter-spacing: 0.02em;
  }

  .tagline {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    margin-bottom: 2.5rem;
  }

  .cta-buttons {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    font-family: system-ui, -apple-system, sans-serif;
    font-size: 0.9375rem;
    font-weight: 500;
    border-radius: 2rem;
    transition: all 0.2s ease;
    text-decoration: none;
  }

  .btn-secondary {
    background: transparent;
    color: var(--color-text-muted);
    border: 1px solid var(--color-border);
  }

  .btn-secondary:hover {
    background: var(--color-bg-secondary);
    border-color: var(--color-primary);
    color: var(--color-text);
  }

  .icon {
    width: 1.25rem;
    height: 1.25rem;
  }

  footer {
    padding: 2rem 0;
    text-align: center;
    border-top: 1px solid var(--color-border);
  }

  footer p {
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }

  footer a {
    color: var(--color-text-muted);
    transition: color 0.15s ease;
  }

  footer a:hover {
    color: var(--color-text);
  }

  .separator {
    margin: 0 0.75rem;
    opacity: 0.5;
  }

  .copyright {
    margin-top: 0.75rem;
    font-size: 0.75rem;
    opacity: 0.7;
  }

  @media (max-width: 640px) {
    .logo {
      font-size: 2.5rem;
    }

    .tagline {
      font-size: 1.125rem;
    }
  }
</style>
